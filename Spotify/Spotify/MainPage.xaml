<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             NavigationPage.HasNavigationBar="False"
             x:Class="Spotify.MainPage">

    <StackLayout Padding="24, 8">
        <StackLayout HorizontalOptions="CenterAndExpand" VerticalOptions="FillAndExpand">
            <Image Source="Spotify_Logo_RGB_Black.png" WidthRequest="240" VerticalOptions="CenterAndExpand" />
        </StackLayout>
        <Label Text="Login and enjoy!" FontSize="30" FontAttributes="Bold" TextColor="#000" HorizontalOptions="CenterAndExpand" />
        <StackLayout VerticalOptions="FillAndExpand" Spacing="4" Padding="24">
            <Label Text="Email" TextColor="Black" FontSize="15" />
            <Entry Keyboard="Email" Placeholder="Entre your email..." />
            <Label Text="Password" TextColor="Black" FontSize="15" />
            <Entry IsPassword="true" />
            <Button x:Name="btnLogin" Text="Login" TextColor="White" BackgroundColor="#1DB954" CornerRadius="6" Margin="0, 16" />
        </StackLayout>
    </StackLayout>

</ContentPage>
